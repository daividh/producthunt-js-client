html, body
  height: 100%

body
  background-color: $background
  color: $main
  font-family: Tahoma, Geneva, sans-serif

html, body, h1, h2, h3, h4, h5, h6
  margin: 0
  padding: 0
  font-weight: normal

#page_container
  width: 960px
  max-width: 960px
  margin: auto

.is-primary
  color: $primary

.is-secondary
  color: $secondary

.is-centered
  text-align: center

a
  text-decoration: none